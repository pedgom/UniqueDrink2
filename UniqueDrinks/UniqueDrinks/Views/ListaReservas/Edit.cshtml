@model UniqueDrinks.Models.ListaReservas

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ListaReservas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LRId" />
            <div class="form-group">
                <label asp-for="Reservado" class="control-label"></label>
                <input asp-for="Reservado" class="form-control" />
                <span asp-validation-for="Reservado" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CheckOut" /> @Html.DisplayNameFor(model => model.CheckOut)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ClienteFK" class="control-label"></label>
                <select asp-for="ClienteFK" class="form-control" asp-items="ViewBag.ClienteFK"></select>
                <span asp-validation-for="ClienteFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
